{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "React",
    "extends": "./base.json",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./src",
        "downlevelIteration": true,
        "paths": {
            "*": ["*"]
        },
        "lib": ["esnext", "dom", "dom.iterable"],
        "sourceMap": true
    },
    "include": ["./types/main.d.ts", "./src/**/*.ts", "./src/**/*.tsx"]
}
