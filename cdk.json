{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "CDK",
    "extends": "./base.json",
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "forceConsistentCasingInFileNames": false,
        "preserveSymlinks": false
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": [
        "./types/main.d.ts",
        "bin/**/*.ts",
        "lib/**/*.ts",
        "src/**/*.ts"
    ]
}
